<% layout("layout/boilerplate.ejs") %>
<body>
    
    <div class="row">
        <div class="col-8 offset-2">
        <h3>Create a new listing</h3>
   <form method="post" action="/listings" novalidate class="needs-validation">
    <div class="mb-3">
        <label class="form-label" for="title" >Title</label>
        <input placeholder="enter title" name="listing[title]" type="text" class="form-control" required> 
        <div class="valid-feedback">title looks good</div>
    </div>
   

<div class="mb-3">
    <label class="form-label" for="describtion" >Describtion</label>
    <textarea name="listing[describtion]"  type="text" class="form-control"required></textarea>
    <div class="invalid-feedback"> require describtion</div>
</div>


<div class="mb-3">
    <label class="form-label" for="image" >Image</label>
    <input placeholder="enter image" name="listing[image]" type="text" class="form-control" >
    <div class="invalid-feedback"> require image</div> 
</div>
<div class="row">
   <div class="col-4 mb-3">
        <label class="form-label" for="price" >Price</label>
        <input placeholder="enter price" name="listing[price]"   class="form-control"required> 
        <div class="invalid-feedback"> require price</div>
    </div>

    <div class="col-8 mb-3">
        <label class="form-label" for="country" >Country</label>
        <input placeholder="enter country" name="listing[country]" type="text" class="form-control"required> 
    </div>
    
</div>




<div class="mb-3">
    <label class="form-label" for="location" >Location</label>
    <input placeholder="enter location" name="listing[location]" type="text" class="form-control"required> 
</div>



<button type="submit" class="btn btn-dark add-btn" >ADD</button>
   </form>
</div>
</div>
</body>
</html>