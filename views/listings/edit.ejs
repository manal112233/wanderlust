<% layout("layout/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">

    
    <h3>Edit listing</h3>
    <form  method="post" action="/listings/<%=listing._id %>?_method=PUT" novalidate class="needs-validation">

         <div class="mb-3">
            <label class="form-label" for="title" >Title</label>
         <input value="<%= listing.title %>" name="listing[title]" type="text" class="form-control" required> 
         </div>
        <div class="mb-3">
            <label class="form-label" for="describtion" >Describtion</label>
     <textarea name="listing[describtion]" type="text" class="form-control" ><%= listing.describtion %></textarea>
     
         </div>
 <div class="mb-3">
    <label class="form-label" for="image" >image</label>
    <input value="<%= listing.image %>" name="listing[image]" type="text"  class="form-control" required> 
    <div class="invalid-feedback"> require image</div> 
   
 </div>
 <div class="row">

      <div class="mb-3 col-4" >
         <label class="form-label" for="price" >price</label>
        <input value="<%= listing.price %>" name="listing[price]" type="number" class="form-control" required> 
        <div class="invalid-feedback"> require price</div> 
    </div>
    <div class="mb-3 col-8" >
        <label class="form-label" for="country" >country</label>
        <input value="<%= listing.country %>" name="listing[country]" type="text" class="form-control" required> 
        <div class="invalid-feedback"> require country</div> 
 
    </div>
</div>
 <div class="mb-3">
    <label class="form-label" for="location" >location</label>
    <input value="<%= listing.location %>" name="listing[location]" type="text"  class="form-control" required> 
    <div class="invalid-feedback"> require location</div> 
 
    </div>
 
 
 

 
 <button type="submit"  class="btn btn-dark mt-3 edit-btn">Edit</button>
    </form>
</div>
</div>
</body>
</html>